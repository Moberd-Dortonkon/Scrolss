<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VolonteerStatus">

    <!-- TODO: Update blank fragment layout -->


    <Button
        android:textColor="@color/colorBlue_text"
        android:background="@drawable/button"
        android:id="@+id/eat"
        android:layout_width="180dp"
        android:layout_height="97dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="102dp"
        android:text="@string/eat" />

    <Button
        android:textColor="@color/colorBlue_text"
        android:background="@drawable/button"
        android:id="@+id/refrsh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="64dp"
        android:text="@string/refresh" />

    <ImageView
        android:id="@+id/eaten"
        android:layout_width="80dp"
        android:layout_height="88dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/eat"
        android:src="@drawable/ic_thumdown" />


    <ImageButton
        android:id="@+id/mapButton"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/refrsh"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:background="#ffff"
        android:src="@drawable/ic_full_open"
        android:text="MAP" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/volonteerMap"
        android:layout_width="258dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:id="@+id/distance"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text=""
        android:textSize="25dp" />


</RelativeLayout>