                android:layout_marginBottom="10dp"
                android:text="@string/korea"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/mexico"
                android:layout_width="70dp"
                android:layout_height="50dp"
