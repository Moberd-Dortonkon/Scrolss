<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".groups.GreetingsGroupFragment">

    <android.support.v7.widget.Toolbar
        app:title="@string/group"
        android:elevation="8dp"
        android:background="@color/colorWhite_front"
        android:id="@+id/toolbarId"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="75dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/greetingf_name"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:hint="@string/name" />

        <EditText
            android:id="@+id/family"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:hint="@string/name_fam" />


        <Button
            android:layout_gravity="bottom"
            android:id="@+id/greetings_button_leader"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:background="@drawable/rect_back"
            android:text="@string/leader"
            android:textColor="@color/colorBlue_text" />

        <Button
            android:layout_gravity="bottom"
            android:id="@+id/greetings_button_volonteer"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:background="@drawable/rect_back"
            android:text="@string/volunteer"
            android:textColor="@color/colorBlue_text" />

    </LinearLayout>


</LinearLayout>