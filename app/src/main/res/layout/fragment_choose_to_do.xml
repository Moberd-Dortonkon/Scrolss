<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".groups.ChooseToDo"
    android:layout_gravity="center_vertical">


    <Button
        android:layout_margin="5dp"
        android:background="@drawable/rect_back"
        android:textColor="@color/colorBlue_text"
        android:textSize="20sp"
        android:layout_weight="1"
        android:id="@+id/chooseTo_createGroup"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/my_groups" />
    <Button
        android:layout_margin="5dp"
        android:background="@drawable/rect_back"
        android:textColor="@color/colorBlue_text"
        android:textSize="20sp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/choose_to_jointogroup"
        android:text="@string/joinGroup"
        />




</LinearLayout>